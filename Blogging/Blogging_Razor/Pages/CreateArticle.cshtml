@page
@model Blogging_Razor.Pages.CreateArticleModel
@{
}
@if (ViewData["success"] != null)
{
    <div class="alert-success p-3">
        @ViewData["Success"]
    </div>

}

@if (ViewData["Error"] != null)
{
    <div class="alert-danger p-3">
        @ViewData["Error"]
    </div>

}
<form class="mr-auto ml-auto clear" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.Title">عنوان مقاله</label>
            <input class="form-control" asp-for="@Model.Command.Title">
            <span class="text-danger" asp-validation-for="@Model.Command.Title"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.Picture">عکس</label>
            <input class="form-control" asp-for="@Model.Command.Picture">
            <span class="text-danger" asp-validation-for="@Model.Command.Picture"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.PictureAlt">ALT عکس</label>
            <input class="form-control" asp-for="@Model.Command.PictureAlt">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.PictureTitle">Title عکس</label>
            <input class="form-control" asp-for="@Model.Command.PictureTitle" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.Command.ShortDescription">توضیحات کوتاه</label>
            <textarea class="form-control" asp-for="@Model.Command.ShortDescription"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Command.ShortDescription"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Command.Body">متن مقاله</label>
        <textarea rows="5" type="text" class="form-control" asp-for="@Model.Command.Body"></textarea>
    </div>
    <button type="submit" class="btn btn-success submit-button">ارسال</button>
</form>
